+	kfree(sbi->s_mb_prealloc_table);
+	memset(new_table, 0, num * sizeof(*new_table));
+	sbi->s_mb_prealloc_table = new_table;
+	sbi->s_mb_prealloc_table_size = num;
+	cur = str;
